<main role="main" class="container">
	<h1>
		{{title}}
		{{#if loggedIn}}
			{{#unless isFavorite}}
				<form id="favorite-form" action="/recipe" method="POST">
					<input type="hidden" name="currentUser" value="{{user}}" />
					<input type="hidden" name="recipeId" value="{{id}}" />
					<input type="hidden" name="isFavorite" value="false" />
					<button type="submit" id="favorite-button" class="fa fa-star btn btn-outline-light"></button>
				</form>
			{{/unless}}
			{{#if isFavorite}}
				<form id="unfavorite-form" action="/recipe" method="POST">
					<input type="hidden" name="currentUser" value="{{user}}" />
					<input type="hidden" name="recipeId" value="{{id}}" />
					<input type="hidden" name="isFavorite" value="true" />
					<button type="submit" id="unfavorite-button" class="fa fa-star btn btn-outline-light checked"></button>
				</form>
			{{/if}}
		{{/if}}
	</h1>
	<div class="row">
		<div class="col-md-6">
			<img src="{{photoUrl}}" class="img-fluid border rounded" />
		</div>
		<div class="col-md-4">
			<h4>Ingredients</h4>
			<ul class="list-group">
				{{#each ingredients}}
					{{> ingredientItem}}
				{{/each}}
			</ul>
		</div>
	</div>
	<br>
	<h4>Steps</h4>
	<div class="row">
		<ul class="list-group">
			{{#each steps}}
				{{> step}}
			{{/each}}
		</ul>
	</div>
</main>