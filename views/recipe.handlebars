<main role="main" class="container">
	<h1>
		{{title}}
		{{#if loggedIn}}
			<form action="/favorite">
				<a class="fa fa-star" onclick="this.parentNode.submit();" href=""></a>
			</form>
		{{/if}}
	</h1>
	<div class="row">
		<div class="col-md-6">
			<img src="{{photoUrl}}" class="img-fluid border rounded" />
		</div>
		<div class="col-md-4">
			<h4>Ingredients</h4>
			<ul class="list-group">
				{{#each ingredients}}
					{{> ingredientItem}}
				{{/each}}
			</ul>
		</div>
	</div>
	<br>
	<h4>Steps</h4>
	<div class="row">
		<ul class="list-group">
			{{#each steps}}
				{{> step}}
			{{/each}}
		</ul>
	</div>
</main>