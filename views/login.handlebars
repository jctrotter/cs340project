<main role="main" class="container">
    <h2>Login</h2>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <form action="/login" method="POST" id="register-form">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email-input">Username</label>
                        <input type="username" class="form-control" name="username" id="register-email-input">
                    </div>
                    <div class="form-group">
                        <label for="password-input">Password</label>
                        <input type="password" class="form-control" name="password" id="register-password-input">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="login-submit">Login</button>
                    </div>
                </div> <!-- col-md-4 -->
            </form>
        </div> <!-- col-md-12 -->
    </div> <!-- row -->
</main>